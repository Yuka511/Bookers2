<header>
  <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
    <div class = "container">
      <a class = "navbar-brand" href ="/"><span>Bookers</span></a>
      <button class = "navbar-toggler" type = "button" data-toggler = "collapse" data-target = "#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
        <span class = "navbar-toggler-icon"></span>
      </button>
      <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
        <ul class = "navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><!-- ログイン後のHomeリンク-->
              <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                <i class = "fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li><!-- ログイン後のUsersリンク-->
              <%= link_to users_path, class: "nav-link text-light" do %>
                <i class = "fa-solid fa-house"></i>Users
              <% end %>
            </li>
            <li><!-- ログイン後のBooksリンク-->
              <%= link_to books_path, class: "nav-link text-light" do %>
                <i class = "fa-solid fa-house"></i>Books
              <% end %>
            </li>
            <li><!-- ログイン後のLog outリンク-->
              <%= link_to  destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
                <i class = "fa-solid fa-right-to-bracket"></i>
                Log out
              <% end %>
            </li>
          <% else %>
            <li><!-- ログイン前のHomeリンク-->
              <%= link_to root_path, class: "nav-link text-light" do %>
                <i class = "fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li><!-- ログイン前のAboutリンク-->
              <%= link_to homes_about_path, class: "nav-link text-light" do %>
                <i class = "fa-solid fa-link"></i>About
              <% end %>
            </li>
            <li><!-- ログイン前のSign upリンク-->
              <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                <i class = "fa-solid fa-user-plus"></i>
