<div class = "container">
  <div class = "row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <div class = "error_explanation">
        <% if @book.errors.any? %>
          <strong><%= @book.errors.count %> error prohibited this obj from being saved:</strong>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @book do |f| %>
        <label for="inputTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" %><br>
        <label for="inputBody">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"inputBody" %><br>
        <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to 'Show', book_path(@book) %>
      <%= link_to 'Back', '/books' %>
    </div>
  </div>
</div>