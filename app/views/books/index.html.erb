<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'users/sidebar', user: @user, book: @book %>
    <div class = 'col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <th>Title</th>
          <th>Opinion</th>
        </thead> <!-- 全ユーザーのbookの一覧表示 -->
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(50,50) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>