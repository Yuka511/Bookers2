<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'users/sidebar', user: @user, book: @book %>
    <div class = 'col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <% @users.each do |user| %>
          <thead>
            <th><%= image_tag user.get_profile_image(50,50) %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user) %></th>
          </thead>
        <% end %>
      </table>
    </div>
  </div>
</div>